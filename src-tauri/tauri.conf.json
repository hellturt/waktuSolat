{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Waktu Solat",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "scope": [
          "**"
        ]
      },
      "notification": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev.0.1",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Waktu Solat",
        "label": "main",
        "width": 800,
        "height": 800,
        "visible": false,
        "hiddenTitle": true,
        "focus": false,
        "transparent": true,
        "decorations": true,
        "acceptFirstMouse": true
      },
      {
        "width": 400,
        "height": 200,
        "decorations": false,
        "url": "../src/splashscreen.html",
        "label": "splashscreen",
        "center": true
      }
    ]
  }
}